{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "globals": {
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      2,
      { "SwitchCase": 1 }
    ],
    "quotes": [
      "error",
      "single",
      {"allowTemplateLiterals": true}
    ],
    // "no-console": "off",
    "semi": [
      "error",
      "never"
    ]
  }
}